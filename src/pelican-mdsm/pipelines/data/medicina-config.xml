<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pelican>

<configuration version="1.0">
    <pipeline>

        <buffers>
           <TimeStreamData>
               <buffer maxSize="100000000" maxChunkSize="100000000"/>
           </TimeStreamData>
        </buffers>

        <chunkers>
           <MedicinaChunker>
               <data type="TimeStreamData"/>
               <connection host="127.0.0.1" port="8090"/>
               <params samplesPerPacket="2"
                       nrPolarisation="1"
                       subbandsPerPacket="1024" 
                       packets="32"
                       clock="0.05"/>  <!-- 2048 = #Channles * #Beams -->
               <samples type="8" />
           </MedicinaChunker>
        </chunkers>

        <adapters>
            <AdapterTimeStream>
                <packetsPerChunk number="32"/>
                <subbands number="1024" />
                <polarisations number="1" />
                <samplesPerPacket number="2" />
                <sampleSize bits="8" />
                <fixedSizePackets value="false" />
            </AdapterTimeStream>
        </adapters>

        <clients>
            <MedicinaStreamDataClient>
                <data type="TimeStreamData" adapter="AdapterTimeStream" />
            </MedicinaStreamDataClient>
        </clients>

        <modules>
            <MdsmModule>
                <observationfile filepath="/home/lessju/Code/MDSM/Tests/Medicina/observation.xml" />
            </MdsmModule>
        </modules>

        <output>
            <streamers>
                <SigprocWriter>
                    <file filepath="medicina_beamformed_data.dat" />
                    <params channelOneFrequency="408" 
                            frequencyOffset="-0.0015625"
                            numberOfChannels="1024"
                            samplingTime="0.001"
                            telescope="MEDICINA"/>
                </SigprocWriter>
            </streamers>
            <dataStreams>
               <stream name="TimeStreamData" listeners="SigprocWriter" />
            </dataStreams>
        </output>

    </pipeline>
</configuration>
